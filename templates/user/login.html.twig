{% extends 'base.html.twig' %}

{% block title %}Auth{% endblock %}

{% block body %}
  <div class="container">
    <h1 class="mx-auto"
        style="margin: 5px 0 20px 0; text-align: center;
        font-weight: 100;">
      Авторизация
    </h1>

    <div class="card col-6 bg-q mx-auto" style="margin-bottom: 20px;">
      <div class="card-body">
        {{ form_start(login_form) }}
        <div class="form-group">
          {{ form_row(login_form.username) }}
        </div>
        <div class="form-group">
          {{ form_row(login_form.password) }}
        </div>
        <br>
        <div class="form-group">
          {{ form_row(login_form.submit) }}
        </div>
        {{ form_end(login_form) }}
        {% if error %}
          <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
